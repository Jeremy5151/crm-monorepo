{
  "name": "crm-monorepo",
  "private": true,
  "packageManager": "pnpm@10.18.3",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "dev:api": "pnpm --filter api dev",
    "dev:web": "pnpm --filter web dev",
    "dev:all": "pnpm -w -r --parallel run dev --filter api --filter web"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.6.0"
  },
  "dependencies": {
    "@nestjs/mapped-types": "^2.1.0",
    "swr": "^2.3.6"
  }
}
